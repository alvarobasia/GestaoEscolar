<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CourseModelController">
   <center>
      <AnchorPane fx:id="back" prefHeight="800.0" prefWidth="800.0" styleClass="back" stylesheets="@application.css" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="newCourse" layoutX="79.0" layoutY="177.0" mnemonicParsing="false" onAction="#addCourse" prefHeight="41.0" prefWidth="294.0" styleClass="btn" stylesheets="@application.css" text="Adicionar um curso">
               <font>
                  <Font name="Liberation Sans" size="22.0" />
               </font></Button>
            <Button fx:id="newSupplie" layoutX="77.0" layoutY="107.0" mnemonicParsing="false" onAction="#addSupplie" prefHeight="41.0" prefWidth="295.0" styleClass="btn" stylesheets="@application.css" text="Adicionar uma materia">
               <font>
                  <Font name="Liberation Sans" size="22.0" />
               </font></Button>
            <Button fx:id="backButton" layoutX="78.0" layoutY="626.0" mnemonicParsing="false" onAction="#backToMenu" styleClass="close" stylesheets="@application.css" text="voltar" textFill="red">
               <font>
                  <Font name="Liberation Sans" size="22.0" />
               </font></Button>
            <Button fx:id="newClassroom" layoutX="78.0" layoutY="253.0" mnemonicParsing="false" onAction="#addClassroom" prefHeight="41.0" prefWidth="295.0" styleClass="btn" stylesheets="@application.css" text="Adicionar uma sala">
               <font>
                  <Font name="Liberation Sans" size="22.0" />
               </font>
            </Button>
            <Button fx:id="deleteAndChangeClassroom" layoutX="78.0" layoutY="334.0" mnemonicParsing="false" onAction="#changeClassroom" prefHeight="41.0" prefWidth="294.0" styleClass="btn" stylesheets="@application.css" text="Alterar/excluir uma sala">
               <font>
                  <Font name="Liberation Sans" size="22.0" />
               </font>
            </Button>
         </children></AnchorPane>
   </center>
   <left>
      <Pane fx:id="lateralBar" prefHeight="800.0" prefWidth="270.0" style="-fx-background-color: #f27d12;" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
